@model IEnumerable<JanSamadhan.Models.Issue>

@{ 
    ViewData["Title"] = "Officer Dashboard";
}

<h1>All Complaints</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(item.RelatedImageUrl))
                {
                    <img src="~/images/@item.RelatedImageUrl" class="card-img-top" alt="Issue Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="ComplaintDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View & Reply</a>
                        </div>
                        <small class="text-muted">
                            @if (item.Replies != null && item.Replies.Any())
                            {
                                <span class="badge badge-success">Replied</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
