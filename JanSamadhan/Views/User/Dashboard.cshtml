@model IEnumerable<JanSamadhan.Models.Issue>

@{
    ViewData["Title"] = "My Complaints";
}

<h1>My Complaints</h1>

<p>
    <a asp-controller="Issue" asp-action="Create" class="btn btn-primary">Create New Complaint</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(item.RelatedImageUrl))
                {
                    <img src="~/images/@item.RelatedImageUrl" class="card-img-top" alt="Issue Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="Issue" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                            <a asp-controller="Issue" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        </div>
                        <small class="text-muted">
                            @if (item.Replies != null && item.Replies.Any())
                            {
                                <span class="badge badge-success">Replied</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>